<p>
  <%= form_tag orders_path, method: :get do |f| %>
    <%= text_field_tag 'filter[email]', nil, placeholder: 'Filter by email' %> <br>
    <%= text_field_tag 'filter[last_name]', nil, placeholder: 'Filter by last name' %> <br>
    <%= submit_tag 'Filter' %>
  <% end %>
</p>

<table id='ordersTable' class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.first_name %></td>
        <td><%= order.last_name %></td>
        <td><%= order.email %></td>
        <td><%= order.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
